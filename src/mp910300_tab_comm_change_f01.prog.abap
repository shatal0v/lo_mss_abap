*&SPWIZARD: OUTPUT MODULE FOR TC 'TAB_COMMENT'. DO NOT CHANGE THIS LINE!
*&SPWIZARD: UPDATE LINES FOR EQUIVALENT SCROLLBAR
MODULE tab_comment_change_tc_attr OUTPUT.
  DATA:lt_comm TYPE TABLE OF  zhrt_9103_commt.
  DATA:ls_pa0002 TYPE   pa0002.

  IF p9103-tabnr IS NOT INITIAL.

    SELECT * FROM zhrt_9103_commt INTO TABLE lt_comm WHERE tabnr = p9103-tabnr.
    IF sy-subrc EQ 0.

      CALL FUNCTION 'DD_DOMVALUES_GET'
        EXPORTING
          domname        = 'ZD_KSTATUS'   "<-- Your Domain Here
          text           = 'X'
          langu          = sy-langu
        TABLES
          dd07v_tab      = lt_idd07v
        EXCEPTIONS
          wrong_textflag = 1
          OTHERS         = 2.
      REFRESH t_comment.
      LOOP AT lt_comm INTO DATA(ls_comm).
        APPEND INITIAL LINE TO t_comment ASSIGNING FIELD-SYMBOL(<fs_comment>).
        READ TABLE lt_idd07v INTO DATA(ls_idd07v1) WITH KEY domvalue_l = p9103-status.
        IF sy-subrc EQ 0.
          <fs_comment>-status =  ls_idd07v1-ddtext.
        ENDIF.
        SELECT SINGLE * INTO  ls_pa0002  FROM pa0002 WHERE pernr = ls_comm-author.
        IF sy-subrc = 0.
          CONCATENATE ls_pa0002-nachn ls_pa0002-vorna ls_pa0002-midnm INTO <fs_comment>-author SEPARATED BY space.
        ENDIF.



        <fs_comment>-text = ls_comm-text.
        <fs_comment>-seqnr = ls_comm-seqnr.

        CALL FUNCTION 'CONVERSION_EXIT_TSTPS_OUTPUT'
          EXPORTING
            input  = ls_comm-timestamp
          IMPORTING
            output = <fs_comment>-timestamp.

      ENDLOOP.
    ENDIF.
  ENDIF.
  DESCRIBE TABLE t_comment LINES tab_comment-lines.

ENDMODULE.

